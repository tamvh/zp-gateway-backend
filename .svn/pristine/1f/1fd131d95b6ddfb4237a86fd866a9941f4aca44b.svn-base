<div class="center_vertical">
    <div class="login_wrapper">
        <div class="animate form login_form ">
            <section class="login_content">
                <form id="frm-login">
                    <h1>Đăng nhập</h1>
                    
                    <div class="form-group" ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }">
                        <span style="color:red;" ng-show="form.username.$dirty && form.username.$error.required" class="help-block">Yêu cầu nhập tên đăng nhập</span>
                        <!-- <label for="username">Tên đăng nhập</label> -->
                        <input type="text"  id="u" name="u" placeholder="Nhập tên đăng nhập" class="form-control" ng-model="username" required />

                    </div>
                    <div class="form-group" ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }">
                        <span style="color:red;" ng-show="form.password.$dirty && form.password.$error.required" class="help-block">Yêu cầu nhập mật khẩu</span>
                        <!-- <label for="password">Mật khẩu</label> -->
                        <input type="password"  id="p" name="p"  placeholder="Nhập mật khẩu" class="form-control" ng-model="password" required />

                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success btnblue form-control" ng-click="login()">Đăng nhập</button>

                    </div>
                    <div class="clearfix"></div>
                </form>
            </section>
        </div>
    </div>
</div>

