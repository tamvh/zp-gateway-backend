<div class="center_vertical">
    <div class="login_wrapper">
        <div class="animate form login_form ">
            <section class="login_content">
                <form name="forgetPasssword">
                    <div class="modal-header">
                        <h3 class="modal-title">Quên mật khẩu</h3>
                    </div>
                    <div class="modal-body"> 
                        <div class="form-group" ng-class = "{'has-error' : checkEmail && (submitClicked)}">
                            <div class="row">                                
                                <div class="col-md-12 col-xs-12 col-sm-12">
                                    <input type="text" class="form-control" placeholder="Nhập email" ng-model="email">
                                    <span class="red" ng-show="checkEmail">(*) Đây không phải là email. Vui lòng kiểm tra lại.</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-xs-4 col-sm-4" style="text-align: center;">
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-warning form-control" ng-click="back()"><- Quay lại</button>
                                    </div>
                                </div>
                                <div class="col-md-8 col-xs-8 col-sm-8" style="text-align: center;">
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-success btnblue form-control" ng-click="confirm()">Nhận mật khẩu mới</button>
                                    </div>
                                </div>
                            </div>
                        </div>                          
                    </div>
                    <div class="clearfix"></div>
                </form>
            </section>
        </div>
    </div>
</div>
